    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnShowartist_Click(object sender, EventArgs e)
        {
            string dbconnString = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=C:\\Users\\Richard\\Desktop\\Music.accdb";
            string qryString = "SELECT * FROM Songs";
            string output = "";

            using (OleDbConnection connection = new OleDbConnection(dbconnString))
            {
                OleDbCommand command = new OleDbCommand(qryString, connection);
                connection.Open();
                OleDbDataReader reader = command.ExecuteReader();
                while (reader.Read())
                {
                    output += reader[0].ToString() + "\t" + reader[1].ToString() + "\t\t\t\t" + reader[2].ToString() + "\t\t" + reader[3].ToString() + "\r\n";
                }
                reader.Close();
                txtOutput.Text = output;
            }

        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // TODO: This line of code loads data into the 'musicDataSetAlbum.Album' table. You can move, or remove it, as needed.
            this.albumTableAdapter.Fill(this.musicDataSetAlbum.Album);
            // TODO: This line of code loads data into the 'musicDataSet.Artist' table. You can move, or remove it, as needed.
            this.artistTableAdapter.Fill(this.musicDataSet.Artist);

        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            string dbconnString = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=C:\\Users\\Richard\\Desktop\\Music.accdb";
            string qryString = "DELETE FROM artist WHERE artist=?";

            using (OleDbConnection connection = new OleDbConnection(dbconnString))
            {
                OleDbCommand command = new OleDbCommand(qryString, connection);
                command.Parameters.AddWithValue("artist", cmbArtist.Text);
                connection.Open();
                command.ExecuteNonQuery();
                txtOutput.Text = "Record deleted.";
                connection.Close();
            }
        }

        private void btnShowalbum_Click(object sender, EventArgs e)
        {
            string dbconnString = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=C:\\Users\\Richard\\Desktop\\Music.accdb";
            string qryString = "SELECT album.album FROM artist, album WHERE artist.artistid=album.artistid AND artist.artist=?";
            string output = "";

            using (OleDbConnection connection = new OleDbConnection(dbconnString))
            {
                OleDbCommand command = new OleDbCommand(qryString, connection);
                connection.Open();
                command.Parameters.AddWithValue("artist.artist", cmbArtist.Text);
                OleDbDataReader reader = command.ExecuteReader();
                while (reader.Read())
                {
                    output += reader[0].ToString() + "\r\n";
                }
                reader.Close();
                txtOutput.Text = output;
            }
        }

        private void btnAddartist_Click(object sender, EventArgs e)
        {
            string dbconnString = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=C:\\Users\\Richard\\Desktop\\Music.accdb";
            string qryString = "INSERT INTO artist (artistid, artist) VALUES (?,?)";

            using (OleDbConnection connection = new OleDbConnection(dbconnString))
            {
                OleDbCommand command = new OleDbCommand(qryString, connection);
                command.Parameters.AddWithValue("artistid", txtArtistid.Text);
                command.Parameters.AddWithValue("artist", txtArtistname.Text);
                connection.Open();
                command.ExecuteNonQuery();
                txtOutput.Text = "Record added.";
                connection.Close();
            }
        }

